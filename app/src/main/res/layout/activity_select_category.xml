<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="biippo.css360.uwb.biippobeta.SelectCategory"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Category"
        android:id="@+id/SelectCategory_textview_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category1"
        android:id="@+id/SelectCategory_button_category1"
        android:layout_below="@+id/SelectCategory_textview_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category2"
        android:id="@+id/SelectCategory_button_category2"
        android:layout_below="@+id/SelectCategory_button_category1"
        android:layout_alignRight="@+id/SelectCategory_button_category1"
        android:layout_alignEnd="@+id/SelectCategory_button_category1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category3"
        android:id="@+id/SelectCategory_button_category3"
        android:layout_below="@+id/SelectCategory_button_category2"
        android:layout_alignRight="@+id/SelectCategory_button_category2"
        android:layout_alignEnd="@+id/SelectCategory_button_category2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category4"
        android:id="@+id/SelectCategory_button_category4"
        android:layout_below="@+id/SelectCategory_button_category3"
        android:layout_alignRight="@+id/SelectCategory_button_category3"
        android:layout_alignEnd="@+id/SelectCategory_button_category3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category5"
        android:id="@+id/SelectCategory_button_category5"
        android:layout_below="@+id/SelectCategory_button_category4"
        android:layout_alignRight="@+id/SelectCategory_button_category4"
        android:layout_alignEnd="@+id/SelectCategory_button_category4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
